<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution-ubuntu</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>lib/libdiscid/linux/</directory>
            <outputDirectory>lib/libdiscid/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>unixDeploy/lib/jre</directory>
            <outputDirectory>lib/jre</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>unixDeploy/lib/javafx</directory>
            <outputDirectory>lib/javafx</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>unixDeploy</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet> <!-- Create empty directory -->
            <outputDirectory>images</outputDirectory>
            <excludes><exclude>**/*</exclude></excludes>
        </fileSet>
    </fileSets>
</assembly>