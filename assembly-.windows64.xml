<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution-windows64</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.exe</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>lib/libdiscid/win64/</directory>
            <outputDirectory>lib/libdiscid/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${jre.path.from}</directory>
            <outputDirectory>lib/jre</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${javafx.path.from}</directory>
            <outputDirectory>lib/javafx</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>